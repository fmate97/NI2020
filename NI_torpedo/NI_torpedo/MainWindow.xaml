<Window x:Class="NI_torpedo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NI_torpedo"
        mc:Ignorable="d"
        Title="Torpedo" Height="300" Width="300" ResizeMode="CanMinimize">
    <Grid RenderTransformOrigin="0.502,0.487">
        <CheckBox x:Name="al" Content="Számítógép ellen" HorizontalAlignment="Left" Margin="25,96,0,0" VerticalAlignment="Top" Checked="al_Checked"/>
        <CheckBox x:Name="twoPlayer" Content="Másik játékos ellen" HorizontalAlignment="Left" Margin="25,142,0,0" VerticalAlignment="Top" Checked="twoPlayer_Checked"/>
        <Label x:Name="label" Content="Kivel szeretnél játszani?" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
